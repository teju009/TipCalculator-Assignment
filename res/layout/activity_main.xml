<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <EditText
        android:id="@+id/inputAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/amountLabel"
        android:layout_centerHorizontal="true"
        android:ems="10"/>

    <TextView
        android:id="@+id/amountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tip15"
        android:layout_alignParentTop="true"
        android:layout_marginTop="18dp"
        android:text="@string/amountLabel"
        android:textSize="@dimen/activity_horizontal_margin" />

    <Button
        android:id="@+id/tip15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tip10"
        android:layout_alignBottom="@+id/tip10"
        android:layout_centerHorizontal="true"
        android:onClick="onClick15"
        android:text="@string/tip15" />

    <Button
        android:id="@+id/tip10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/inputAmount"
        android:layout_marginTop="33dp"
        android:onClick="onClick10"
        android:text="@string/tip10" />

    <Button
        android:id="@+id/tip20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tip15"
        android:layout_alignBottom="@+id/tip15"
        android:layout_alignParentRight="true"
        android:onClick="onClick20"
        android:text="@string/tip20" />

    <TextView
        android:id="@+id/resultValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text=""
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
